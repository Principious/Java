public class GeneratorOfCases {
	public static void main(String[] args) {
		
		int c = 8;
		
		Case[] myCases = new Case[c];
			
		int x = 0;
	
	// Создаю объекты для каждой ячейки массива дел:
	
	
		while (x < c) {
			myCases[x] = new Case();
			x = x + 1;
		}
		
	// Задаю каждому делу имена:
		
		myCases[0].name = "стирка";
		myCases[1].name = "уборка пыли";
		myCases[2].name = "готовка";
		myCases[3].name = "мытьё полов";
		myCases[4].name = "пылесос";
		myCases[5].name = "мытьё посуды";
		myCases[6].name = "вынос мусора";
		myCases[7].name = "поход в магазин";
		
		
		int p = 2;
		
		Person[] pers = new Person[p];
		
		x = 0;
	
	// Создаю объекты для каждой ячейки массива персон:
	
		while(x < p) {
			pers[x] = new Person();
			x = x + 1;
		}
	
	// Задаю каждой персоне имя:
	
		pers[0].name = "Миша";
		pers[1].name = "Кристина";
		
		x = 0;
	
	// Суть следующего цикла такова: выбираю случайной персоне дело,
	//								 вывожу на экран пару (персона - дело),
	//								 уничтожаю ссылку на объект с делом,
	//								 при следующем проходе выполняю проверку, не является ли ссылка пустой,
	//								 проверяю до тех пор, пока ссылка окажется непустой,
	//								 и так продолжается до тех пор, пока все дела не кончатся.
	
		while (x < c) {
			int curCase = (int) (Math.random() * 8);
			int curPers = (int) (Math.random() * 2);
			
			while (myCases[curCase] == null) {
				curCase = (int) (Math.random() * 8);
			}
			
			System.out.println(pers[curPers].name + " - " + myCases[curCase].name);
			
			myCases[curCase] = null;
			x = x + 1;
		}
	}
}
		
class Person {
	String name;
	
	void getName() {
		System.out.println(name);
	}
}
		
class Case {
	String name;
	
	void getName() {
		System.out.println(name);
	}
}
